<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PlayerInterface.Themes">
    
    <SolidColorBrush x:Key="TBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="TBackgroundLight" Color="White" />
    <SolidColorBrush x:Key="TBackgroundHighlight" Color="#C7C7C7" />
    <SolidColorBrush x:Key="TBackgroundDisabled" Color="#606060" />

    <SolidColorBrush x:Key="TBorder" Color="#B4B4B4" />
    <SolidColorBrush x:Key="TText" Color="Black" />
    <SolidColorBrush x:Key="TTextDisabled" Color="#ADB5B2" />
    
    <SolidColorBrush x:Key="THighlight" Color="#FFBCD7DC" />

</ResourceDictionary>