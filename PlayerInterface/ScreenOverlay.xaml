<Window x:Class="PlayerInterface.ScreenOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayerInterface"
        mc:Ignorable="d"
        Title="ScreenOverlay" Height="100" Width="800" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        WindowStyle="None" WindowStartupLocation="Manual" Left="0" Top="0" ResizeMode="NoResize" ShowInTaskbar="False" IsTabStop="False"
        Opacity="0.5" AllowsTransparency="True" Background="White" Topmost="True" Focusable="False"
        PreviewMouseMove="Window_PreviewMouseMove" IsVisibleChanged="Window_IsVisibleChanged">
    <Grid>
        <Viewbox>
            <Label Padding="0" x:Name="Lb_Main" Content="{Binding Text}" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="8" Background="{x:Null}" />
        </Viewbox>
    </Grid>
</Window>